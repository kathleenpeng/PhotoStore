<% include ../partials/header %>

 <div class="title">
    <h2>Contact Us</h2>
    <p>Please fill in the form to contact us.</p>
  </div>

 <form action="/contactform" method="post">
   <div class="formgroup">
     <label for="fullname"><b>Full Name</b></label>
     <input type="text" placeholder="Full Name" name="fullname" required>
     <label for="email"><b>User Email</b></label>
     <input type="text" placeholder="User Email" name="email" required>
     <label for="phonenumber"><b>Phone Number</b></label>
     <input type="text" placeholder="Enter Phone Number" name="phonenumber" required>
     <label for="message"><b>Message</b></label>
     <textarea id="message" name="message" placeholder="Write something.." style="width: 100%; height:100%;"></textarea>
     <button type="submit">Submit</button>
    </div>

</form>
     <a href="/contacts">Show Contacts</a>    
    
 <% include ../partials/footer %>