<% include ../partials/header %>


<div class="row">
           
       <br>
       <h1 class="navtext">Welcome to the Photo Stock Page</h1>
       <br>
        <div class="grid-container">
       <% result.forEach(function(product) { %> 
       
      
           <div class="item">
               <!--<h1 class="itemtitle">Id: <%//= product.Id %> </h1>-->
                        <!--<p class="itemp"><b>Title:</b><%//= product.title %></p><br>-->
                        <!--<p class="itemp"><b>Price: â‚¬</b><%//= product.price %></p><br>-->
