 <% include ../partials/header %>
 
 <div class = "container">

    <h1>Shopping Cart</h1><br><br>
    

    <div class="shopping-cart">
       <div class="rowblock">
           
           <div class="columnline">
                <div class="box"><b>Image </b></div>
                <div class="box"><b>Title</b></div>
                <div class="box"><b>Price</b></div>
                <div class="box"><b>Remove</b></div>
      
            </div>
         <hr>
         <% result.forEach(function(additem) { %> 
           <div class="columnline">
               
               
                <div class="box"><a href="/cart/<%= additem.Id %>"><img style="width: 130px; height: auto;" src="/<%= additem.image %>" class="pimage" class="filterDiv hover sun orange"></a></div>
                <div class="box"><%= additem.title %></div>
                <div class="box">€<%= additem.price %></div>
                <div class="box"><i class="fas fa-times-circle"></i></div>
              
           </div>
           
           <hr>
           
           <% }); %>
           
           
      </div>
  
      <div class="totals">
            <div class="totals-item">
              <label>Subtotal</label>
              <div class="totals-value" id="cart-subtotal">€71.97</div>
            </div>
        <div class="totals-item">
              <label>Tax (5%)</label>
              <div class="totals-value" id="cart-tax">€3.60</div>
        </div>
        
        <div class="totals-item totals-item-total">
              <label>Grand Total</label>
              <div class="totals-value" id="cart-total">€90.57</div>
        </div>
     </div>
  
      <button type="button"><a href="/payment">Checkout</a></button>

          </div> 
        
</div> 

<% include ../partials/footer %>